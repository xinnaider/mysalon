<UserControl x:Class="wpf_sallonnovo.UserControls.UserServico"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_sallonnovo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#F1F1F1">
            
            <StackPanel Height="100" Orientation="Horizontal">
                <Ellipse Margin="70 0" Width="105" Height="105">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Imagens/aluno.PNG" />
                    </Ellipse.Fill>
                </Ellipse>
                <Label FontFamily="Bahnschrift" Margin="20 0" FontSize="20" VerticalAlignment="Center" Content="{Binding Nome}"></Label>
                <Label VerticalAlignment="Center" FontFamily="Bahnschrift" Margin="50 0" FontSize="20" Content="{Binding Preco}"></Label>

            </StackPanel>
           
        </Grid>
    </Grid>
</UserControl>
