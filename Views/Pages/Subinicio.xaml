                        <Ellipse Margin="70 0" Width="105" Height="105">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Imagens/aluno.PNG" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Label FontFamily="Bahnschrift" Margin="20 0" FontSize="20">CORTE NEYMARZINHO</Label>
                            <Label FontFamily="Bahnschrift" Margin="50 0" FontSize="20">R$ 30,00</Label>
