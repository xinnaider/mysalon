<Window x:Class="wpf_sallon.Views.Cadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_sallon.Views"
        mc:Ignorable="d"
        Title="Cadastro" Height="720" Width="1280"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
     ResizeMode="NoResize"
     WindowStartupLocation="CenterOwner">
    <Grid Background="#FF9A8FC8">
        <Grid.OpacityMask>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF9A8FC8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.OpacityMask>
        <Image HorizontalAlignment="Center" Height="994" VerticalAlignment="Top" Width="2116" Source="/_9A8FC8__1_-removebg-preview.png" Margin="0,-140,0,0" Visibility="Visible" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Grid Margin="59,249,705,239">
            <StackPanel Margin="0,-92,0,-93">
                <TextBox
                    Margin="0, 0, 0, 15"
                    FontSize="25"
                    x:Name="NomeCompleto"
                    materialDesign:HintAssist.Hint="Nome completo">
                    <TextBox.Text>
                        <Binding
                          Path="NomeCompleto"
                          UpdateSourceTrigger="PropertyChanged">
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <TextBox
                    Margin="0, 0, 0, 15"
                    FontSize="25"
                    x:Name="NomeUsuario"
                    materialDesign:HintAssist.Hint="Usuário">
                    <TextBox.Text>
                        <Binding
                          Path="NomeCompleto"
                          UpdateSourceTrigger="PropertyChanged">
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <TextBox
                    Margin="0, 0, 0, 15"
                    FontSize="25"
                    x:Name="Email"
                    materialDesign:HintAssist.Hint="Email">
                    <TextBox.Text>
                        <Binding
                          Path="Email"
                          UpdateSourceTrigger="PropertyChanged">
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <PasswordBox
                  Margin="0, 0, 0, 15"
                  FontSize="25"
                  x:Name="PasswordBox"
                  materialDesign:HintAssist.Hint="Senha"
                  materialDesign:TextFieldAssist.HasClearButton="True"/>
                 <PasswordBox
                  FontSize="25"
                  x:Name="PasswordBox2"
                  materialDesign:HintAssist.Hint="Confirmar senha"
                  materialDesign:TextFieldAssist.HasClearButton="True"/>
                <StackPanel Margin="5, 15, 5, 15" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="botaovoltar" Click="OnClick1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#DD000000" Cursor="Hand" Content="Quero logar"/>
                </StackPanel>
                <StackPanel>
                    <Button Width="120" Height="45" FontSize="18" BorderThickness="15" Cursor="Hand">Registrar</Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock FontSize="18" Margin="0,0,0,10" Foreground="White">Copyright (c) 2022 MySalon All Rights Reserved</TextBlock>
        </Grid>
        <Image HorizontalAlignment="Left" Height="572" Margin="708,182,0,0" VerticalAlignment="Top" Width="572" Source="/MARIO ROSSI.png"/>

    </Grid>
</Window>
